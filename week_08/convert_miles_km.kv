BoxLayout:
    orientation: 'horizontal'

    TextInput:
        id: input_miles
        input_type: 'number'
        multiline: False
        hint_text: 'Enter miles'
        on_text: app.handle_conversion()

    BoxLayout:
        orientation: 'vertical'

        Button:
            text: 'Up'
            on_press: app.handle_increment(1)

        Button:
            text: 'Down'
            on_press: app.handle_increment(-1)

    Label:
        text: 'Miles to Kilometers:'

    Label:
        text: app.output_result
